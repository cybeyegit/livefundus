<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="layout" name="Main layout" inherit_id="website.layout_logo_show">
        <xpath expr="//a[hasclass('logo')]" position="after">
            <t t-call="website_language_in_header.language_selector"/>
        </xpath>
    </template>

    <template id="language_selector">
        <ul class="js_language_selector mb0 list-inline"
            t-if="(request and request.is_frontend_multilang and len(languages) &gt; 1) or (website and (editable or translatable))">
            <li class="list-inline-item">
                <div class="dropdown">
                    <div role="menu">
                        <t t-foreach="languages" t-as="lg">
                            <a t-attf-class="js_change_lang btn btn-sm {{ 'btn-primary' if lg[0] == lang else 'btn-secondary'}}"
                               t-att-data-url_code="lg[1]"
                               t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang_code=lg[0])">
                                <t t-set="display_dict" t-value="{'en_US': 'EN', 'zh_CN': 'ä¸­'}"/>
                                <t t-set="display_lg"
                                   t-value="lg[2].split('/').pop() if lg[0] not in display_dict else display_dict[lg[0]]"/>
                                <t t-esc="display_lg"/>
                            </a>
                        </t>
                    </div>
                </div>
            </li>
        </ul>
    </template>
</odoo>
