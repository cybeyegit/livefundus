<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_shop_saleorder_document" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@name='total']" position="after">
            <t t-if="doc.loyalty_points">
               <table class="table table-condensed mt32 mb32">
                    <thead>
                        <tr>
                            <th>Loyalty Information</th>
                            <th class="text-right">Total</th>
                        </tr>
                   </thead> 
                   <tbody class="sale_tbody">
                        <tr>
                            <td>
                                <strong>Loyalty Points:</strong>
                                <t t-if="doc.loyalty_state == 'done'">
                                    (Got From this order.)
                                </t>
                                <t t-if="doc.loyalty_state == 'draft'">
                                    (Got From this order.)
                                </t>
                                <t t-if="doc.loyalty_state == 'cancel'">
                                    (Got From this order.)
                                </t>
                            </td>
                            <td class="text-right">
                                <span t-field="doc.loyalty_points"
                                    t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                            </td>
                        </tr>
                        <t t-if="doc.extra_loyalty_points">
                        <tr><td><strong>Loyalty Extra Points:</strong></td>
                            <td class="text-right">
                                <span t-field="doc.extra_loyalty_points"
                                    t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                            </td>
                        </tr>
                        </t>
                        <t t-if="doc.partner_id.loyalty_points">
                        <tr><td><strong>Loyalty Balance:</strong></td>
                            <td class="text-right">
                                <span t-field="doc.partner_id.loyalty_points"
                                    t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                            </td>
                        </tr>
                        </t>
                   </tbody>
               </table>
            </t>
        </xpath>
    </template>
</odoo>

